<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View android:id="@+id/crop_picker_texture"
          android:background="#FF0000"
          android:layout_width="1dp"
          android:layout_height="1dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_left"
              android:layout_marginTop="10dp"
              android:text="Left"
              android:layout_above="@id/crop_left"
              android:textSize="30dp"
              android:layout_marginLeft="20dp"/>

    <SeekBar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/crop_left"
             android:layout_marginBottom="10dp"
             android:layout_above="@id/text_right"
             android:layout_marginLeft="20dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_right"
              android:layout_marginTop="10dp"
              android:text="Right"
              android:layout_above="@id/crop_right"
              android:layout_marginLeft="20dp"
              android:textSize="30dp"/>

    <SeekBar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/crop_right"
             android:layout_marginBottom="10dp"
             android:layout_above="@id/text_top"
             android:layout_marginLeft="20dp"

    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_top"
              android:layout_marginTop="10dp"
              android:text="Top"
              android:layout_above="@id/crop_top"
              android:layout_marginLeft="20dp"
              android:textSize="30dp"/>

    <SeekBar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/crop_top"
             android:layout_marginBottom="10dp"
             android:layout_above="@id/text_bottom"
             android:layout_marginLeft="20dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_bottom"
              android:layout_marginTop="10dp"
              android:text="Bottom"
              android:layout_above="@id/crop_bottom"
              android:layout_marginLeft="20dp"
              android:textSize="30dp"
    />

    <SeekBar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/crop_bottom"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="20dp"
             android:layout_alignParentBottom="true"
    />


</RelativeLayout>
