<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.jbutler.mymou.MainMenu" >

 <View
            android:id="@+id/backgroundpink"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/pinkrectangle"/>

    <View
            android:id="@+id/backgroundred"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/redrectangle"/>

    <Button
            android:text="Monkey 0\n Start"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonGoMonkZero"/>

    <Button
            android:text="Monkey 1\n Start"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonGoMonkOne"/>

 <Button
            android:text="Reward\nChoice #0"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonRewardZero"/>

    <Button
            android:text="Reward\nChoice #1"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonRewardOne"/>

    <Button
            android:text="Reward\nChoice #2"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonRewardTwo"/>

    <Button
            android:text="Reward\nChoice #3"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:textSize="30sp"
            android:id="@+id/buttonRewardThree"/>


    <View
            android:id="@+id/foregroundblack"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/blackrectangle"/>


    <TextView
            android:id="@+id/tvLog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textColor="@color/grey"/>



</FrameLayout>