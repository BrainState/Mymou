<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:key="system_settings"
            app:title="System settings">

        <SwitchPreferenceCompat
                app:key="bluetooth"
                app:title="Enable bluetooth/reward system"
                app:defaultValue="@bool/default_bluetooth"/>
        <SwitchPreferenceCompat
                app:key="camera"
                app:title="Enable camera"
                app:defaultValue="@bool/default_camera"/>
        <SwitchPreferenceCompat
                app:key="facerecog"
                app:title="Enable facial recognition"
                app:defaultValue="@bool/default_facerecog"/>
        <SwitchPreferenceCompat
                app:key="restartoncrash"
                app:title="Automatically restart task on crash"
                app:defaultValue="@bool/default_restartoncrash"/>
        <SwitchPreferenceCompat
                app:key="sound"
                app:title="Enable sounds"
                android:summary="Device will beep on successful trials to aid secondary reinforcement"
                app:defaultValue="@bool/default_sound"/>
        <SwitchPreferenceCompat
                app:key="crop_photos"
                app:title="Crop camera photos"
                app:defaultValue="false"/>
        <Preference
                app:fragment="com.example.jbutler.mymou.PrefsFragCropPickerParent"
                app:key="croppicker_prefsfrag"
                app:title="Configure crop boundaries of photos"
                app:isPreferenceVisible="false"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="task_settings"
            app:title="Common task settings">

        <Preference
                app:fragment="com.example.jbutler.mymou.PrefsFragCommon"
                app:key="@string/preftag_task_all"
                app:title="Configure settings that are common across all tasks"/>

        </PreferenceCategory>


    <PreferenceCategory
            app:key="auto_start_stop"
            app:title="Automatic startup and shutdown">

           <Preference
                app:fragment="com.example.jbutler.mymou.PrefsFragAutoStartStop"
                app:key="prefsfrag_autostartstop"
                app:title="Configure settings for automatically starting or stopping the device each day"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>